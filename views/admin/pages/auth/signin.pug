extends ../../layouts/auth.pug
include ../../mixins/alert.pug

block main 
  +alert-error(5000)
  +alert-success(5000)
  .container.my-5 
    .row.justify-content-center 
      .col-8 
        h1(class="text-center") Đăng kí
        form(
          action=`${prefixAdmin}/auth/signin`
          method="POST"
        )
          div(class="form-group")
            label(for="email") Email 
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            )
          div(class="form-group")
            label(for="password") Mật khẩu 
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            )
          div(class="form-group")
            label(for="password-confirm") Xác nhận mật khẩu
            input(
              type="password"
              class="form-control"
              id="password-confirm"
              name="passwordConfirm"
              required
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Đăng kí
        div(class="text-right")
          a(
            href=`${prefixAdmin}/auth/login`
            class="btn btn-info btn-sm"
          ) Đăng nhập